<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body bg-dark">
        <h1 class="text-center mb-3 text-light">
          <i class="fas fa-user-plus"></i> Register
        </h1>
        <%- include('partial/messages.ejs') %>
        <form action="/user/register" method="POST">
          <div class="form-group">
            <label class="text-light" for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label class="text-light" for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label class="text-light" for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label class="text-light" for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-success btn-block">
            Register
          </button>
        </form>
        <p class="lead mt-4 text-light">Have An Account? <a href="/user/login">Login</a></p>
      </div>
    </div>
  </div>